<% layout("layouts/boilerplate.ejs") %>

<div class="home">
    <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://inmarketsales.com/wp-content/uploads/2021/01/online-store-tips.jpg"
                    class="w-100 home" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://www.shoponcloud.com/images/site-specific/2.jpg" class=" w-100 home"
                    alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://northernvirginiamag.com/wp-content/uploads/2021/03/retail.jpg" class=" w-100 home"
                    alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <h2 class="fs-3 my-3 ">Shop by Category</h2>
    <div class="category-list">
        <div class="row mb-3">
            <div class="col-6 col-md-3 d-flex flex-column justify-content-center align-items-center mb-3">
                <a href="/tablets" class="card link d-block-inline cat shadow border rounded-3 border-primary">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="material-icons md-40 text-primary">tablet_mac</i>
                        <h5 class="card-title mt-1 text-primary">Tablets</h5>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3 d-flex flex-column justify-content-center align-items-center mb-3">
                <a href="/smartphones" class="card link d-block-inline cat shadow border rounded-3 border-success">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="material-icons md-40 text-success">phone_iphone</i>
                        <h5 class="card-title mt-1 text-success">Smartphones</h5>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3 d-flex flex-column justify-content-center align-items-center mb-3">
                <a href="/laptops" class="card link d-block-inline cat shadow border rounded-3 border-info">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="material-icons md-40 text-info">laptop</i>
                        <h5 class="card-title mt-1 text-info">Laptops</h5>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3 d-flex flex-column justify-content-center align-items-center mb-3">
                <a href="/desktops" class="card link d-block-inline cat shadow border rounded-3 border-warning">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="material-icons md-40 text-warning">desktop_mac</i>
                        <h5 class="card-title mt-1 text-warning">Desktops</h5>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="top-products rounded rounded-3">
        <h2 class="fs-3">Top Products</h2>
        <div class="row ">
            <% for(let product of topProducts) { %>
                <div class="col-6 col-md-4 col-lg-3 mb-3 product <%= product.brand %>">
                    <div class="pt-2 shadow" id="box">
                        <a href="/<%= product.category %>/<%= product._id %>" class="link">
                            <div class="detail">
                                <img src="<%= product.images[0].url %>" class="card-img-top p-1" alt="...">
                                <div class="card-body">
                                    <div class="rating text-center">
                                        <% for( let index=0; index < 5; index++ ) { %>
                                            <% if (index < product.rating) { %>
                                                <span class="fa fa-star checked"></span>
                                            <% } else { %>
                                                <span class="fa fa-star"></span>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <h6 class="card-title mb-1"><%= product.name %></h6>
                                    <h5 class="text-primary"><span class="material-icons md-18">
                                        currency_rupee
                                        </span><%= product.price %></h5>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
